{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* Production Build Overrides */
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,

    /* Optimizations */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.mock.ts"
  ]
}
