# Use exact versions for peer dependencies to avoid conflicts
strict-peer-dependencies=false

# Set engine-strict to ensure Node.js version requirements
engine-strict=true

# Save exact versions (no caret ranges) for production dependencies
save-exact=true

# Use legacy peer deps for compatibility with Next.js 16
legacy-peer-deps=false

# Install development dependencies
save-dev=true

# Fund packages to support developers
fund=true

# Audit configuration
audit-level=moderate

# Log level
loglevel=warn

# Progress display
progress=false

# Prefer online package resolution
prefer-online=true

# Registry configuration (uncomment to use custom registry)
# registry=https://registry.npmjs.org/

# Workspace configuration (for monorepo support if needed)
# workspaces=true

# Lockfile version (use v3 for better performance)
lockfile-version=3
