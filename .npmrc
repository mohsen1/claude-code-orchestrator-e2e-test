# npm configuration for SplitSync

# Use Node.js 20 LTS
engine-strict=true

# Save exact versions
save-exact=true

# Use workspaces (if applicable)
workspaces=false

# Lockfile configuration
lockfile-version=3

# Registry configuration (optional - use private registry if needed)
# registry=https://registry.npmjs.org/

# Install configuration
prefer-offline=true
audit=false
fund=false

# Logging
loglevel=warn
progress=false

# CI/CD optimizations
fetch-retries=3
fetch-retry-maxtimeout=120000
fetch-retry-mintimeout=20000
network-timeout=120000
