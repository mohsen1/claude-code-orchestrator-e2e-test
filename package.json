{
  "name": "splitsync",
  "version": "1.0.0",
  "private": true,
  "description": "Real-time expense sharing application with group management and settlement tracking",
  "author": "SplitSync Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:report": "eslint . --format json --output-file eslint-report.json",
    "typecheck": "tsc --noEmit",
    "type-coverage": "type-coverage",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md,yml,yaml}\"",
    "test": "vitest",
    "test:unit": "vitest --run --coverage",
    "test:integration": "vitest --run --coverage --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:coverage": "vitest --coverage",
    "test:coverage:check": "vitest --coverage && node scripts/check-coverage.mjs",
    "test:watch": "vitest --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:test:setup": "drizzle-kit push --config=drizzle.test.config.ts",
    "analyze:bundle": "ANALYZE=true next build",
    "clean": "rm -rf .next out node_modules/.cache coverage",
    "precommit": "lint-staged",
    "prepare": "husky || true"
  },
  "dependencies": {
    "next": "^16.1.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "next-auth": "^4.24.13",
    "drizzle-orm": "^0.45.1",
    "better-sqlite3": "^12.6.2",
    "zod": "^4.3.5",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "@tanstack/react-query": "^5.62.11",
    "react-hook-form": "^7.71.1",
    "@hookform/resolvers": "^3.10.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.468.0",
    "date-fns": "^4.1.0",
    "react-day-picker": "^8.10.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "typescript": "^5.9.3",
    "eslint": "^9.17.0",
    "eslint-config-next": "^16.1.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-unicorn": "^56.0.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "tailwindcss": "^4.1.18",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20",
    "vitest": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitejs/plugin-react": "^4.3.4",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@playwright/test": "^1.49.1",
    "drizzle-kit": "^0.30.2",
    "type-coverage": "^2.29.7",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "cross-env": "^7.0.3",
    "is-ci": "^4.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
