# Local Development Environment Variables
# Copy this file to .env.local and fill in your values

# Database Configuration
DATABASE_URL="file:./dev.db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="development-secret-change-in-production-use-openssl-rand-base64-32"

# OAuth Providers - Google (Optional)
# To enable Google OAuth:
# 1. Go to https://console.cloud.google.com/apis/credentials
# 2. Create a new OAuth 2.0 client ID
# 3. Add http://localhost:3000/api/auth/callback/google to authorized redirect URIs
# 4. Copy the Client ID and Secret below

GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Application Settings
NODE_ENV="development"

# Feature Flags
ENABLE_EMAIL_AUTH="true"
ENABLE_OAUTH_AUTH="true"
ENABLE_REALTIME="true"

# Debug Settings
LOG_LEVEL="debug"

# Session Configuration
NEXTAUTH_SESSION_MAX_AGE="604800" # 7 days in development
