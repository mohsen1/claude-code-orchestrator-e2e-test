# Database Configuration
DATABASE_URL="file:././data/splitsync.db"
DATABASE_URL_DEBUG="file:././data/splitsync-debug.db"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-nextauth-key-change-this-in-production"

# Google OAuth Provider
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Application Configuration
NODE_ENV="development"
PORT=3000

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Session Configuration
SESSION_MAX_AGE=604800000
SESSION_UPDATE_AGE=86400000

# Email Configuration (Optional - for future email notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="SplitSync <noreply@splitsync.app>"

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# WebSocket Configuration
WS_PORT=3001
WS_PATH="/socket.io"

# Logging Configuration
LOG_LEVEL="debug"
LOG_FORMAT="json"

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_INVITE_LINKS=true
ENABLE_REALTIME_SYNC=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Monitoring & Observability (Optional)
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"
ANALYTICS_ID=""
