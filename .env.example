# ============================================================================
# SplitSync Environment Configuration
# ============================================================================
# Copy this file to .env.local and fill in the values
# Never commit .env.local or .env files with actual credentials

# ----------------------------------------------------------------------------
# Application
# ----------------------------------------------------------------------------
NEXT_PUBLIC_APP_NAME=SplitSync
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ----------------------------------------------------------------------------
# Authentication (NextAuth.js)
# ----------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Google OAuth Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ----------------------------------------------------------------------------
# Database (SQLite via better-sqlite3)
# ----------------------------------------------------------------------------
DATABASE_URL=file:./data/db/splitsync.db
DATABASE_MIGRATION_DIR=./drizzle

# ----------------------------------------------------------------------------
# Session Configuration
# ----------------------------------------------------------------------------
SESSION_MAX_AGE=604800
SESSION_UPDATE_AGE=86400

# ----------------------------------------------------------------------------
# WebSocket/Real-time (Socket.io)
# ----------------------------------------------------------------------------
SOCKET_PORT=3001
SOCKET_PATH=/socket.io/

# ----------------------------------------------------------------------------
# Invite Link Security
# ----------------------------------------------------------------------------
INVITE_LINK_EXPIRY_HOURS=168
INVITE_LINK_MAX_USES=10

# ----------------------------------------------------------------------------
# File Upload
# ----------------------------------------------------------------------------
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------------------------------------------------
# Logging & Monitoring
# ----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
FEATURE_REGISTRATION_ENABLED=true
FEATURE_GROUP_CREATION_ENABLED=true
FEATURE_REAL_TIME_ENABLED=true

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------
BCRYPT_ROUNDS=12
CSRF_SECRET=your-csrf-secret-here-generate-with-openssl-rand-base64-32

# ----------------------------------------------------------------------------
# Deployment
# ----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000

# ----------------------------------------------------------------------------
# Observability (Optional - for production monitoring)
# ----------------------------------------------------------------------------
# SENTRY_DSN=your-sentry-dsn
# SENTRY_ENVIRONMENT=development
# ANALYTICS_ID=your-analytics-id
