# =============================================================================
# SplitSync Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values for local development

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_NAME=SplitSync
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=3.0.0

# -----------------------------------------------------------------------------
# NextAuth.js Configuration
# -----------------------------------------------------------------------------
# Generate a secure secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3000

# Google OAuth Provider
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# -----------------------------------------------------------------------------
# Database Configuration (SQLite)
# -----------------------------------------------------------------------------
DATABASE_URL=file:./data/splitsync.db
# For production, consider: file:./data/splitsync.prod.db

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
SESSION_MAX_AGE=604800  # 7 days in seconds
SESSION_UPDATE_AGE=86400  # 1 day in seconds

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Rate limiting configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# Invite link expiration (in hours)
INVITE_LINK_EXPIRATION_HOURS=168  # 7 days

# -----------------------------------------------------------------------------
# WebSocket/Socket.io Configuration
# -----------------------------------------------------------------------------
# Socket.io CORS origin
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# Socket.io ping timeout and interval
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# -----------------------------------------------------------------------------
# Email Configuration (Optional - for future email notifications)
# -----------------------------------------------------------------------------
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM=noreply@splitsync.app

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880  # 5MB

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# -----------------------------------------------------------------------------
# Monitoring & Observability (Optional)
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
# SENTRY_DSN=your-sentry-dsn

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_RECEIPT_UPLOADS=true
FEATURE_ANALYTICS=false

# -----------------------------------------------------------------------------
# Development/Production
# -----------------------------------------------------------------------------
NODE_ENV=development
