# Database Configuration
DATABASE_URL=file:./data/splitsync.db

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Google OAuth (Optional - for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Application Configuration
NODE_ENV=development
APP_NAME=SplitSync
APP_URL=http://localhost:3000

# Email Configuration (Optional - for invitations)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@splitsync.app

# Redis Configuration (Optional - for session storage in production)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_INVITES=true
ENABLE_REALTIME=true

# Security
BCRYPT_ROUNDS=12
SESSION_MAX_AGE=604800
SESSION_UPDATE_AGE=86400

# Invite Link Configuration
INVITE_LINK_EXPIRY_DAYS=7
INVITE_LINK_MAX_USES=1

# File Upload (Optional - for receipts)
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
