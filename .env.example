# Application
NEXT_PUBLIC_APP_NAME=SplitSync
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Database (SQLite)
DATABASE_URL=file:./data/splitsync.db

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-change-this-in-production

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Session
NEXTAUTH_SESSION_MAX_AGE=604800000 # 7 days in milliseconds
NEXTAUTH_SESSION_UPDATE_AGE=86400000 # 1 day in milliseconds

# Email Configuration (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@splitsync.app

# Redis/Cache (optional, for production)
REDIS_URL=redis://localhost:6379

# Socket.io
SOCKET_PORT=3001

# File Upload (for receipts)
MAX_FILE_SIZE=5242880 # 5MB in bytes
UPLOAD_DIR=./public/uploads

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_INVITE_ONLY=false

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Monitoring (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
ANALYTICS_ID=

# Security
BCRYPT_ROUNDS=12
CSRF_SECRET=your-csrf-secret-change-this
ENCRYPTION_KEY=your-encryption-key-32-chars-long!

# Development
NEXT_PUBLIC_DEV_TOOLS=true
TURBO_MODE_ENABLED=true
