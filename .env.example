# ============================================
# SplitSync - Environment Variables Template
# ============================================
# Copy this file to .env.local for local development
# DO NOT commit .env files with actual values

# ------------------------------------------
# Application
# ------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=SplitSync
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ------------------------------------------
# Database
# ------------------------------------------
DATABASE_URL="file:./dev.db"
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30000

# ------------------------------------------
# NextAuth.js Authentication
# ------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ------------------------------------------
# Session Management
# ------------------------------------------
SESSION_MAX_AGE=604800000
SESSION_UPDATE_AGE=86400000
SESSION_STRATEGY=database

# ------------------------------------------
# Email Configuration (optional)
# ------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@splitsync.app
EMAIL_REPLY_TO=support@splitsync.app

# ------------------------------------------
# Redis / Caching (optional)
# ------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_MAX_RETRIES=3

# ------------------------------------------
# Real-time (Socket.io)
# ------------------------------------------
SOCKET_PORT=3001
SOCKET_PATH=/socket.io
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PING_TIMEOUT=20000
SOCKET_PING_INTERVAL=25000

# ------------------------------------------
# File Upload / Storage
# ------------------------------------------
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
UPLOAD_DIR=./uploads

# AWS S3 (for production)
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_CDN_URL=

# ------------------------------------------
# Security
# ------------------------------------------
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-encryption-key-32-bytes-base64
CSRF_SECRET=your-csrf-secret-change-this

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ------------------------------------------
# Observability & Monitoring
# ------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=json

# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_POSTHOG_KEY=

# ------------------------------------------
# Feature Flags
# ------------------------------------------
ENABLE_SIGNUP=true
ENABLE_INVITES=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_WEBSOCKETS=true
ENABLE_NOTIFICATIONS=true

# ------------------------------------------
# Payment / Stripe (optional)
# ------------------------------------------
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID=

# ------------------------------------------
# Development Only
# ------------------------------------------
# Uncomment for database debugging
# DEBUG=drizzle-orm,better-sqlite3

# Enable Next.js dev mode features
NEXT_PRIVATE_DEBUG=false
